<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:orientation="vertical"
        android:padding="@dimen/padding_page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002">

        <TextView
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAD Exercises"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercises are in the following pages"
            android:textSize="@dimen/text_size_medium" />

        <Button
            android:id="@+id/btn_ex1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="Exercise - 1 (1)"
            android:textSize="@dimen/text_size_medium" />

        <Button
            android:id="@+id/btn_ex1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Exercise - 1 (2)"
            android:textSize="@dimen/text_size_medium" />

        <Button
            android:id="@+id/btn_ex2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Exercise - 2 (1)"
            android:textSize="@dimen/text_size_medium" />
        <Button
            android:id="@+id/btn_ex2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Exercise - 2 (2)"
            android:textSize="@dimen/text_size_medium" />
        <Button
            android:id="@+id/btn_ex2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Exercise - 2 (3)"
            android:textSize="@dimen/text_size_medium" />
        <Button
            android:id="@+id/btn_ex3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Exercise - 3"
            android:textSize="@dimen/text_size_medium" />
        <Button
            android:id="@+id/go_to_filetransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="GO FILE TRANSFER"
            android:textSize="@dimen/text_size_medium" />
        <Button
            android:id="@+id/openChatAppBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Go to Chat App"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
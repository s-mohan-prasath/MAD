<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UDPActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/clientText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:text="Client"
        android:textSize="@dimen/text_size_large" />
    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter 5-digit password"
        android:inputType="numberPassword" />

    <Button
        android:id="@+id/udpReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive Quiz" />
    <TextView
        android:id="@+id/receivedData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Received Quiz Data:"
        android:textSize="16sp"
        android:paddingTop="10dp" />
    <TextView
        android:id="@+id/serverText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:text="Server"
        android:textSize="@dimen/text_size_large" />
    <Button
        android:id="@+id/udpSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Broadcast Quiz" />
</LinearLayout>